{
  "name": "@gltz-packages/ui",
  "version": "2.1.0",
  "type": "module",
  "description": " Biblioteca de componentes React/TypeScript moderna, acessível e customizável construída com Radix UI + Tailwind CSS",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "vite build",
    "build:lib": "npm run clean && node build.js && npm run build:types && npm run build:css",
    "build:js": "node build.js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:css": "tailwindcss -i ./src/styles/globals.css -o ./dist/styles.css --minify",
    "clean": "rimraf dist",
    "dev": "rollup -c -w",
    "demo:dev": "vite",
    "demo:build": "vite build",
    "demo:preview": "vite preview",
    "lint": "echo 'Linting temporariamente desabilitado - será corrigido em breve'",
    "lint:fix": "echo 'Linting temporariamente desabilitado - será corrigido em breve'",
    "type-check": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:a11y": "jest --testPathPatterns=.*a11y.* --passWithNoTests",
    "test:visual": "jest --testPathPatterns=.*visual.* --passWithNoTests",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css,md}\"",
    "release": "semantic-release",
    "prepublishOnly": "npm run build:lib"
  },
  "keywords": [
    "react",
    "typescript",
    "components",
    "ui",
    "design-system",
    "shadcn",
    "tailwind",
    "radix-ui",
    "accessibility",
    "a11y",
    "framer-motion",
    "modern",
    "responsive",
    "dark-mode",
    "component-library"
  ],
  "author": {
    "name": "Gabriel Latz",
    "email": "gabriel@gltz.dev",
    "url": "https://github.com/glatztp"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/glatztp/gltz.git"
  },
  "bugs": {
    "url": "https://github.com/glatztp/gltz/issues",
    "email": "bugs@gltz.dev"
  },
  "homepage": "https://ui.gltz.dev",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/glatztp"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "peerDependencies": {
    "lucide-react": "^0.303.0",
    "phosphor-react": "^1.4.1",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.16",
    "esbuild": "^0.19.12",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.1",
    "rollup-plugin-postcss": "^4.0.2",
    "tailwindcss": "^3.3.6",
    "ts-jest": "^29.4.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4",
    "@vitest/browser": "^3.2.4",
    "playwright": "^1.54.1",
    "@vitest/coverage-v8": "^3.2.4"
  },
  "dependencies": {
