{
  "name": "@glacien/ui",
  "version": "2.2.1",
  "type": "module",
  "description": "A comprehensive, accessible, and highly customizable React/TypeScript component library built with modern web standards. Features Radix UI primitives, Tailwind CSS integration, and enterprise-grade design systems.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./dist/index.css": "./dist/index.css",
    "./styles": "./dist/index.css"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "scripts": {
    "dev": "vite --host --port 3000",
    "build": "npm run clean && npm run build:css && npm run build:lib && npm run build:types",
    "build:lib": "tsup",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "build:demo": "vite build --outDir dist-demo",
    "build:css": "tailwindcss -i ./src/styles/library.css -o ./dist/index.css --config ./tailwind.config.js --minify",
    "clean": "rimraf dist dist-demo",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "lint:check": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,md}\"",
    "type-check": "tsc --noEmit --incremental",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:a11y": "jest --testPathPattern=accessibility",
    "test:visual": "chromatic --exit-zero-on-changes",
    "preview": "vite preview --port 3001",
    "prepare": "husky install",
    "validate": "npm run lint:check && npm run format:check && npm run type-check && npm run test",
    "publish:patch": "npm run validate && npm run build && npm version patch && npm publish",
    "publish:minor": "npm run validate && npm run build && npm version minor && npm publish",
    "publish:major": "npm run validate && npm run build && npm version major && npm publish",
    "release": "semantic-release",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "react",
    "typescript",
    "components",
    "ui",
    "design-system",
    "component-library",
    "radix-ui",
    "tailwind-css",
    "accessibility",
    "a11y",
    "wcag",
    "dark-mode",
    "responsive",
    "modern",
    "enterprise",
    "professional",
    "customizable",
    "themeable",
    "framer-motion",
    "animation",
    "ssr",
    "next-js",
    "vite",
    "remix",
    "gatsby"
  ],
  "author": {
    "name": "Gabriel Glatz",
    "email": "gabrielfellipeglatz@gmail.com",
    "url": "https://github.com/glatztp"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/glatztp/glacien.git"
  },
  "bugs": {
    "url": "https://github.com/glatztp/glacien/issues",
    "email": "bugs@glacien.dev"
  },
  "homepage": "https://ui.glacien.dev",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/glatztp"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.7",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.6",
    "tsup": "^8.5.0",
    "typescript": "^5.3.3",
    "vite": "^7.0.5"
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.10",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toggle": "^1.1.9",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@types/react-router-dom": "^5.3.3",
    "@vercel/analytics": "^1.5.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "framer-motion": "^12.23.6",
    "lucide-react": "^0.525.0",
    "phosphor-react": "^1.4.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.7.0",
    "tailwind-merge": "^2.6.0",
    "vite": "^7.0.5"
  }
}
